<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme -->
    <style name="Theme.OpenPrintTag" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_container</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>

        <!-- Error colors -->
        <item name="colorError">@color/status_error</item>
        <item name="colorErrorContainer">@color/status_error_container</item>

        <!-- Outline -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Default component styles -->
        <item name="materialCardViewStyle">@style/Widget.OpenPrintTag.Card</item>
        <item name="textInputStyle">@style/Widget.OpenPrintTag.TextInput</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="Theme.OpenPrintTag.BottomSheet" parent="Theme.Material3.Dark.BottomSheetDialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="bottomSheetStyle">@style/Widget.OpenPrintTag.BottomSheet</item>
    </style>
</resources>
