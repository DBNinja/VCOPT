<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/spacing_md"
    android:paddingVertical="@dimen/spacing_sm"
    android:gravity="center_vertical">

    <!-- Label -->
    <TextView
        android:id="@+id/tvPropertyLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/TextAppearance.OpenPrintTag.PropertyLabel"
        android:text="Label" />

    <!-- Value Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end|center_vertical">

        <!-- Primary Value -->
        <TextView
            android:id="@+id/tvPropertyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.OpenPrintTag.PropertyValue"
            android:text="Value" />

        <!-- Secondary Value (e.g., "actual" measurement) -->
        <TextView
            android:id="@+id/tvSecondaryValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_xs"
            style="@style/TextAppearance.OpenPrintTag.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:visibility="gone"
            android:text="(actual)" />

    </LinearLayout>

</LinearLayout>
