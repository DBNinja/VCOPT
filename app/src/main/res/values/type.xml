<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography Scale - Based on Material3 -->

    <!-- Headlines -->
    <style name="TextAppearance.OpenPrintTag.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.OpenPrintTag.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.OpenPrintTag.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Titles -->
    <style name="TextAppearance.OpenPrintTag.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.OpenPrintTag.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Body -->
    <style name="TextAppearance.OpenPrintTag.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <style name="TextAppearance.OpenPrintTag.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">20sp</item>
    </style>

    <style name="TextAppearance.OpenPrintTag.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16sp</item>
    </style>

    <!-- Labels -->
    <style name="TextAppearance.OpenPrintTag.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.OpenPrintTag.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Monospace for data display -->
    <style name="TextAppearance.OpenPrintTag.Mono" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.OpenPrintTag.MonoLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Section Headers -->
    <style name="TextAppearance.OpenPrintTag.SectionHeader" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Property Labels -->
    <style name="TextAppearance.OpenPrintTag.PropertyLabel" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Property Values -->
    <style name="TextAppearance.OpenPrintTag.PropertyValue" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
