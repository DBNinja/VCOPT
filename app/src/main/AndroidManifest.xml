<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="true"/>

    <application
        android:label="VCO Print Tag Writer"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:allowBackup="true"
        android:theme="@style/Theme.OpenPrintTag">
        <activity android:name="com.drunkenblindninja.vcoprinttag.MainActivity" android:exported="true" android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/vnd.openprinttag"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED"/>
            </intent-filter>
            <meta-data android:name="android.nfc.action.TECH_DISCOVERED"
                       android:resource="@xml/nfc_tech_filter"/>
        </activity>
        <activity android:name="com.drunkenblindninja.vcoprinttag.GeneratorActivity" android:exported="false"/>
        <activity android:name="com.drunkenblindninja.vcoprinttag.AuxEditorActivity" android:exported="false"/>
        <activity android:name="com.drunkenblindninja.vcoprinttag.CreditsActivity" android:exported="false"/>
    </application>
</manifest>
